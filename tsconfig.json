{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "baseUrl": "./src",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "incremental": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
